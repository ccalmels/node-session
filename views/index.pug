doctype html5
html
	head
		title Login page
	body
		.error #{message}
		h1 Login page
		form(method='POST' action='/login')
			label Email
			input(type='email' name='email' placeholder='email@provider.com')
			label Password
			input(type='password' name='password' placeholder='password')
			input(type='submit' value='Login')
